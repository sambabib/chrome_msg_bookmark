    {
        "manifest_version": 3,
        "name": "GPT Thread Pinner",
        "version": "1.1",
        "description": "Pin and easily navigate ChatGPT messages.",
        "author": "Emmanuel Akala",
        "permissions": [
            "storage"
        ],
        "host_permissions": [
            "https://chatgpt.com/*"
        ],
        "background": {
            "service_worker": "background.js"
        },
        "content_scripts": [
            {
                "matches": [
                    "https://chatgpt.com/*"
                ],
                "js": [
                    "content.js"
                ]
            }
        ],
        "action": {
            "default_popup": "popup.html"
        }
    }