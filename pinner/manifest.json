    {
        "manifest_version": 3,
        "name": "GPT Thread Pinner",
        "version": "1.1",
        "description": "Pin and easily navigate ChatGPT messages.",
        "permissions": [
            "storage"
        ],
        "host_permissions": [
            "https://chat.openai.com/*"
        ],
        "background": {
            "service_worker": "background.js"
        },
        "content_scripts": [
            {
                "matches": [
                    "https://chat.openai.com/*"
                ],
                "js": [
                    "content.js"
                ]
            }
        ],
        "action": {
            "default_popup": "popup.html",
            "default_icon": {
                "16": "icon16.png",
                "48": "icon48.png",
                "128": "icon128.png"
            }
        }
    }